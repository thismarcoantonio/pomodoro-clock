$darkGreen = #018172
$medGreen  = #3DA99D
$liteGreen = #07FFD1

$darkGrey  = #363636
$medGrey   = #E4E4E4
$liteGrey  = #F2F2F2

$background = #1B1F38

*, *:before, *:after
	padding: 0
	margin: 0
	box-sizing: border-box
body
	font-family: 'Muli', sans-serif
	color: $darkGrey
	background-color: $liteGrey
.header
	width:100%
	background: url('https://static.pexels.com/photos/59096/pexels-photo-59096.jpeg') center center $darkGrey 
	background-size: cover
	position: relative
	height: 350px
	display: flex
	justify-content: center
	align-items: center
	.timing
		transition: .5s
		font-size:3em
		color: $liteGrey
		text-shadow: 2px 2px 2px rgba(0,0,0,.3)
	.timing-desc
		font-size 1.3em
		color $liteGrey
		text-shadow: 2px 2px 2px rgba(0,0,0,.3)
		text-align center
		font-weight 300
		text-transform uppercase
		margin-top -5px
	.fa-play
		padding-left: 3px
	.headBtn
		color: $medGrey
		z-index: 5
		font-size: 4em
		position: absolute
		bottom: -20px
		cursor: pointer
		transition: .5s
		text-shadow: 0 0 10px rgba(0,0,0,.3)
		&:hover
			transform: translateY(-5px)
			text-shadow: 0 7px 15px rgba(0,0,0,.3)
		.fill
			background-color: $darkGrey
			border-radius: 50%
			width: 40px
			height: 40px
			display: block
			position: absolute
			top: 10px
			left: 10px
			z-index: -1
.hidden
	display none !important
.container
	transition: .5s
	width: 95%
	background-color: $medGrey
	margin: -15px auto 0
	border-radius: 3px
	padding: 15px
	z-index: 1
	position: relative
	display: flex
	flex-direction: column
	margin-bottom:45px
	box-shadow: 0 0 15px rgba(0,0,0,.2)
	section
		margin-bottom: 25px
		h1
			border-bottom: 1px solid $darkGrey + 20%
			margin-bottom: 5px
		.controls
			display: flex
			padding: 5px
			justify-content: space-between
			a
				padding: 5px
				cursor: pointer
				transition: .2s
				&:hover, &:focus
					transform: rotate(360deg)
.hidePanel
	width 100%
	background-color rgba(242,242,242, .8)
	border-radius 3px 3px 0 0 
	height 100%
	transition 1s
	visibility hidden
	position absolute
	opacity 0
	left 0
	top 0
.history
	width: 100%
	z-index: 5
	background-color: $medGrey - 5%
	padding: 10px
	h1
		text-transform: uppercase
		font-size: 1em
		margin-bottom: 10px
	div
		padding: 10px 15px
		margin 2px 0 
		background-color: $medGrey
		border-radius: 3px
		animation fadein .6s
.fa-stop
	transition: all .5s
	position: fixed
	z-index: 5
	border-radius: 50%
	display: flex
	padding: 18px
	color: #fff
	cursor: pointer
	box-shadow: 0 0 10px rgba(0,0,0,.5)
	bottom: 10px
	right: 10px
	width: 50px
	height: 50px
	background-color: $medGreen
	&:hover, &:focus
		transform: rotate(360deg)

@media screen and (min-width: 700px)
	.header
		.timing
			font-size: 5em
		.headBtn
			margin-bottom: 50px
			font-size: 3em
			.fill
				display: none
	.container
		width: 80%
		padding: 0
		max-width: 960px
		flex-direction: row
		flex-wrap: wrap
		box-shadow none
		section
			width: 49.5%
			margin-right: 1%
			padding: 15px 15px 0
			margin-bottom: 0
		.last
			margin-right: 0
	.fa-stop
		position: absolute
		right: 2%
		bottom: -25px
	.history
		margin-top: 5px
		border-top: 5px solid $liteGrey
		background-color: $medGrey
		div
			background-color: $liteGrey
			border-radius: 4px
@media screen and (min-width: 1280px)
	.fa-stop
		right: 5%
		

@keyframes fadeout
	0%
		opacity 1
	100%
		opacity 0
@keyframes fadein
	0%
		opacity 0
	100%
		opacity 1